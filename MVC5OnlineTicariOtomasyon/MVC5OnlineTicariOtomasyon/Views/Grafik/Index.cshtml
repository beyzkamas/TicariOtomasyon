
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@{ 
    var grafik = new Chart(width: 500, height: 500);
    grafik.AddTitle(text: "Kategoriler ve Ürün Sayıları");
    grafik.AddLegend(title: "Değerler");

    grafik.AddSeries(
        name: "Veriler",
        //chartType:"Bubble",
        //chartType:"Doughnut",
        //chartType:"Area",
        //chartType:"Bar",
        chartType:"Pie",
        xValue: new[] { "Beyaz Eşya", "Televizyon", "Laptop", "Telefon" },
        yValues: new[] { 400, 500, 200, 650 }
        );
    grafik.Write();
}