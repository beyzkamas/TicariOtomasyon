@using MVC5OnlineTicariOtomasyon.Models.Siniflar
@model List<Personel>
@{
    ViewBag.Title = "DepartmanDetay";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<h2>Departman Detay Sayfası</h2>
<br />
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">Departman Adı:@ViewBag.d</li>
</ol>

<table class="table table-hover">
    <tr>
        
        <th>Personel</th>
        <th>Satışlar</th>
    </tr>
    @foreach (var x in Model)
    {
    <tr>

        <th>@x.PersonelAd @x.PersonelSoyad</th>

        <td><a href="/Departman/DepartmanPersonelSatis/@x.Personelid" class="btn btn-dafult" style="background-color:brown; color:white">Satışlar</a></td>
    </tr>
    }

</table>
